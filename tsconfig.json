{
  "compilerOptions": {
    "target": "es5",                      // Target ECMAScript version
    "module": "commonjs",                  // Module system
    "outDir": "./dist",                    // Output directory
    "rootDir": "./",                       // Input directory (where your TypeScript files are)
    "strict": true,                        // Enable strict type-checking options
    "esModuleInterop": true,               // Enables interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensure file names are case-consistent
    "skipLibCheck": true                   // Skip type checking of declaration files
  },
  "include": [
    "./**/*.ts"                            // Include all .ts files in the project
  ],
  "exclude": [
    "node_modules",                        // Exclude node_modules folder
    "dist"                                 // Exclude dist folder to prevent re-compilation of output
  ]
}
